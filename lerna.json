{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md"
      ],
      "message": "chore(root): publish",
      "push": false,
      "conventionalCommits": false
    },
    "version": {
      "push": true,
      "conventionalCommits": true,
      "allowBranch": ["master", "dev"],
      "message": "chore(root): publish"
    },
    "changelogPreset": {
      "name": "conventionalcommits",
      "types": [
        {
          "type": "feat",
          "section": ":sparkles: Features"
        },
        {
          "type": "fix",
          "section": ":bug: Bug Fixes"
        }
      ]
    }
  }
}